{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "useDefineForClassFields": true,
        "removeComments": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./type",
        "skipLibCheck": true,
        "allowJs": false,
        "checkJs": false,
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}